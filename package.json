{
  "name": "mongodb-dr-simulator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "deploy:local": "./scripts/deploy-local.sh",
    "docker:build": "docker build -t mongodb-dr-simulator:latest .",
    "docker:run": "docker run -d -p 3000:3000 --name mongodb-dr-simulator mongodb-dr-simulator:latest",
    "docker:dev": "docker-compose --profile development up -d mongodb-dr-simulator-dev",
    "docker:prod": "docker-compose up -d mongodb-dr-simulator",
    "docker:proxy": "docker-compose --profile proxy up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:health": "docker exec mongodb-dr-simulator node healthcheck.js",
    "docker:shell": "docker exec -it mongodb-dr-simulator sh",
    "docker:clean": "docker system prune -f && docker volume prune -f"
  },
  "dependencies": {
    "next": "^15.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "lucide-react": "^0.400.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0"
  }
}
